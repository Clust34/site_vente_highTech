{% extends 'base.html.twig' %}

{% block title %}
	Login
	{{ parent() }}
{% endblock %}

{% block body %}

	{% if error %}
		<div class="text-center mb-4 mt-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<section class="container-login mt-4">
		<h1 class="text-center mt-4 mb-4">Page de connection</h1>
		<form action="{{ path('app.login') }}" method="post" class="mt-4 form">
			<div class="form-row-login">
				<div class="form-row-login-midle">
					<label for="username">Email :
					</label>
					<input type="text" id="username" name="_username" value="{{ last_username }}">
				</div>
				<div class="form-row-login-midle">
					<label for="password">Password :
					</label>
					<input type="password" id="password" name="_password" placeholder="S3CR3T" name="_password">
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				</div>
			</div>
			<div class="form-email">
				<a href="{{ path('app_forgot_password_request') }}" class="link">Mot de passe oubli√©</a>
			</div>
			<div class="text-center mb-4">
				<button class="btn btn-primary" type="submit">Se connecter</button>
			</div>
		</form>
	</section>
{% endblock %}
