{% extends 'base.html.twig' %}

{% block title %}
	Modification d'un utilisateur
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-4">
		<h1 class="text-center mb-4 mt-4">Modification d'un utilisateur</h1>
		{{ form_start(form, {'attr': {'class': 'mt-4 form'}}) }}
		{% if form.prenom is defined and form.nom is defined %}
			<div class="form-row">
				<div class="form-row-midle">{{ form_row(form.prenom) }}</div>
				<div class="form-row-midle">{{ form_row(form.nom) }}</div>
			</div>
			<div class="form-email">{{ form_row(form.email) }}</div>
			<div class="form-row">
				<div class="form-row-midle">{{ form_row(form.adresse) }}</div>
				<div class="form-row-midle">{{ form_row(form.zipCode) }}</div>
				<div class="form-row-midle">{{ form_row(form.ville) }}</div>
			</div>
			{# {{ form_row(form.roles|json_encode) }} #}
		{% endif %}

		{% if form.roles is defined %}
			<div class="select-roles ml-2">
				{{ form_row(form.roles) }}
			</div>
		{% endif %}

		{{ form_widget(form) }}
		<div class="text-center">
			<button type="submit" class="btn btn-primary mb-4">Modifier</button>
		</div>
		{{ form_end(form) }}
	</section>
{% endblock %}
