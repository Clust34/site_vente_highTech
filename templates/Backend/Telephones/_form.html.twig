<section class="container mt-4">
	{{ form_start(form, {'attr': {'class': 'mt-4 form'}}) }}
	<div class="form-email">{{ form_row(form.nom) }}</div>
	<div class="form-row">
		<div class="form-row-midle">{{ form_row(form.metaTitle) }}</div>
		<div class="form-row-midle">{{ form_row(form.metaDescription) }}</div>
	</div>
	<div class="form-email">{{ form_row(form.description) }}</div>
	<div class="form-email">{{ form_row(form.marque) }}</div>
	<div class="form-row">
		<div class="form-row-midle">{{ form_row(form.prix) }}</div>
		<div class="form-row-midle">{{ form_row(form.quantity) }}</div>
	</div>
	<div class="form-email">{{ form_row(form.enable) }}</div>

	<div class="form-email">
		<div class="text-start">
			<button type="button" class="btn btn-primary btn-add-collection" data-collection-holder-class="images">Ajouter une image</button>
		</div>
		<ul class="images mb-3 row add-collection-input" data-index="{{ form.images|length > 0 ? form.images|last.vars.name + 1 : 0 }}" data-prototype="{{ form_widget(form.images.vars.prototype)|e('html_attr') }}">
			{% for image in form.images %}
				<li class="row-4">
					<button type="button" class="btn btn-danger mt-4 text-light btn-remove-collection">
						<i class="bi bi-x-octagon-fill"></i>
					</button>
					{{ form_row(image, {'label': false}) }}
				</li>
			{% endfor %}
		</ul>
	</div>

	<div class="text-center mb-4">
		<button class="btn btn-primary" type="submit">{{ buttonLabel|default('save') }}</button>
	</div>
	{{ form_row(form._token) }}
	{{ form_end(form, {render_rest: false}) }}
</section>
