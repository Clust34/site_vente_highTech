{% extends 'base.html.twig' %}

{% block title %}
	Changement du mot de passe
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-4">
		<div class="block-profile">
			<h1 class="text-center mt-4 mb-4">Changement du mot de passe</h1>
			{{ form_start(resetForm) }}
			<div class="form-row-midle ml-4 mb-4">{{ form_row(resetForm.plainPassword) }}</div>
			<button class="ml-4 mb-4 mt-4 btn btn-primary">Changer le mot de passe</button>
			{{ form_end(resetForm) }}
		</div>
	</section>


{% endblock %}
